<p id="notice"><%= notice %></p>
<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3">
      <h2>User info</h2>
      <table class="table">
        <tbody>
          <tr></tr>
          <tr>
          <td>name</td>
          <td><%= @user.name %></td>
          </tr>
          <tr>
          <td>introduction</td>
          <td><%= @user.introduction %></td>
          </tr>
        </tbody>
      </table>
  
  <div class="row">
  <%= link_to edit_user_path(@user.id), class: "btn btn-outline-secondary", method: :get do %>
   　<i class="fas fa-user-cog"></i>  
  <% end %>
  </div>

  <p>投稿ユーザー画像：<%= link_to image_tag current_user.get_profile_image(100,100) %></p>
<h2>New book</h2>
<% if @book.errors.any? %>
  <%= @book.errors.count %>件のエラーが発生しました
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

  <%= form_with model: @book do |f| %>
  <div class="form-group">
    <td>Title</td>
      <%= f.text_field :title %>
  </div>
  <div class="form-group">
    <td>Opinion</td>
      <%= f.text_area :body %>
  </div>
<%= f.submit 'Create Book', class: "btn btn-secondary" %>
  <% end %>
   </div>
<div class="col-md-8 offset-md-1">
<h2>Users</h2>
<table class="table">
  <thead>
    <tr>
      <td>image</td>
      <td>name</td>
      <td colspan="3"></td>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= image_tag user.get_profile_image(100,100) %></td>
        <td><%= user.name %></td>
        <td><%= link_to "Show", user_path(user.id) %></td>
      </tr>
      <% end %>
</div>
  </tbody>
</table>
  </div>
</div>